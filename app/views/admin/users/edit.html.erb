<div class="row">
  <div class="col-md-6">
    <h2 class="pb-4">Edit User Profile</h2>

    <%= form_with model: @user, url: admin_user_path do |f| %>
      <%= render "shared/error_messages", resource: @user %>

      <div class="mb-3">
				<%= f.label :email, class: "form-label" %>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="row mb-4">
				<div class="col">
					<%= f.label :first_name, class: "form-label" %>
					<%= f.text_field :first_name, autocomplete: "first-name", class: 'form-control', required: true %>
				</div>
				
				<div class="col">
					<%= f.label :last_name, class: "form-label" %>
					<%= f.text_field :last_name, autocomplete: "last-name", class: 'form-control' %>
				</div>
			</div>

			<div class="mb-3">
				<%= f.label :role, class: 'form-label' %>
				<%= f.collection_select :roles, Role.all, :id, :name, { prompt: 'Make your selection from the list below(can be empty)'}, { multiple: true, class: 'form-select text-capitalize' } %>
			</div>
			
      <div class="mb-3">
				<%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
