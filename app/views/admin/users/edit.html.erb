<div class="row">
  <div class="col-md-6">
    <h2 class="pb-4">Edit User Profile</h2>

    <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
      <%= render "shared/error_messages", resource: @user %>

      <div class="mb-3">
				<%= f.label :email, class: "form-label" %>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="row mb-4">
				<div class="col">
					<%= f.label :first_name, class: "form-label" %>
					<%= f.text_field :first_name, autocomplete: "first-name", class: 'form-control', required: true %>
				</div>
				
				<div class="col">
					<%= f.label :last_name, class: "form-label" %>
					<%= f.text_field :last_name, autocomplete: "last-name", class: 'form-control' %>
				</div>
			</div>

			<div class="mb-3">
				<h3>Roles:</h3>
				<%= f.collection_check_boxes(:role_ids, Role.order(:id), :id, :name) do |b| %>
					<div class="form-check">
						<%= b.label(class: "form-check-label text-capitalize") %>
						<%= b.check_box(class: "form-check-input text-capitalize") %>
					</div>
				<% end %>
			</div>
			
      <div class="mb-3">
				<%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
